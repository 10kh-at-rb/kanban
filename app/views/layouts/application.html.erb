<!DOCTYPE html>
<html>
<head>
  <title>Kanban</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<div id="wrapper">

  <div id="header">
    <% if logged_in? %>
      <p>welcome back <%= current_user.email %> (<%= link_to "logout", logout_url %>)</p>
      <p><%= current_user.session_key %></p>
    <% else %>
      <p><%= link_to "login", login_url %>
    <% end %>
  </div>

  <div id="main">
    <%= yield %>
  </div>


</div>

</body>
</html>
